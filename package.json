{
  "name": "@as-integrations/cloudflare-workers",
  "description": "An integration to use Cloudflare Workers as a hosting service with Apollo Server v4",
  "version": "1.1.1",
  "author": "Kim Nguyen Huu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apollo-server-integrations/apollo-server-integration-cloudflare-workers.git"
  },
  "homepage": "https://github.com/apollo-server-integrations/apollo-server-integration-cloudflare-workers#readme",
  "bugs": {
    "url": "https://github.com/apollo-server-integrations/apollo-server-integration-cloudflare-workers/issues"
  },
  "keywords": [
    "graphql",
    "apollo",
    "server",
    "cloudflare",
    "workers",
    "typescript"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18.0"
  },
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "clean": "git clean -dfqX",
    "prepack": "npm run build",
    "prettier-check": "prettier --check .",
    "prettier-fix": "prettier --write .",
    "publish-changeset": "changeset publish",
    "spell-check": "cspell lint '**' --no-progress || (echo 'Add any real words to cspell-dict.txt.'; exit 1)",
    "test": "jest",
    "test:ci": "jest --coverage --ci --maxWorkers=2 --reporters=default --reporters=jest-junit",
    "watch": "tsc --build --watch"
  },
  "devDependencies": {
    "@apollo/server-integration-testsuite": "4.13.0",
    "@changesets/changelog-github": "0.5.2",
    "@changesets/cli": "2.29.8",
    "@cloudflare/workers-types": "4.20260228.0",
    "@types/jest": "30.0.0",
    "@types/node": "18.19.130",
    "cspell": "8.19.4",
    "jest": "30.2.0",
    "jest-junit": "16.0.0",
    "prettier": "3.8.1",
    "ts-jest": "29.4.6",
    "ts-node": "10.9.2",
    "typescript": "5.9.3"
  },
  "volta": {
    "node": "22.22.0",
    "npm": "11.10.1"
  },
  "peerDependencies": {
    "@apollo/server": "^4.3.0",
    "graphql": "^16.6.0"
  }
}
